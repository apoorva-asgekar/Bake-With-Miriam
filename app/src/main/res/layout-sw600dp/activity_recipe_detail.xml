<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.android.bakewithmiriam.RecipeDetailActivity">

    <fragment
        android:id="@+id/recipe_step_fragment"
        android:name="com.example.android.bakewithmiriam.RecipeStepsFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="40"/>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/darker_gray" />

    <!-- The container for the step detail -->
    <FrameLayout
        android:id="@+id/step_detail_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="59" />

</LinearLayout>